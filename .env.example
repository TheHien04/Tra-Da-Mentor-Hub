# .env.example
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!
# 
# üîê IMPORTANT: Generate strong secrets using:
#    node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#    Or online: https://generate-secret.vercel.app/32

# ============ FRONTEND CONFIG ============
VITE_API_URL=http://localhost:5000/api
VITE_APP_NAME=Tra Da Mentor
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development
VITE_LOG_LEVEL=debug

# ============ BACKEND CONFIG ============
NODE_ENV=development
PORT=5000
HOST=localhost

# ============ DATABASE ============
DATABASE_URL=mongodb://localhost:27017/tra-da-mentor
MONGO_USER=
MONGO_PASSWORD=

# ============ AUTHENTICATION ============
# üîê REQUIRED: Generate secure random strings (min 64 characters)
# Use: openssl rand -hex 64
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_64_CHARS_LONG_USE_OPENSSL_RAND_HEX_64
JWT_EXPIRE=7d

# Google SSO (optional ‚Äì xem docs/GOOGLE_SSO_SETUP.md)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FRONTEND_URL=http://localhost:5173
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_SECURE_RANDOM_STRING_AT_LEAST_64_CHARS_LONG_USE_OPENSSL_RAND_HEX_64
JWT_REFRESH_EXPIRE=30d

# ============ SECURITY ============
# Production CORS should be your frontend domain only
CORS_ORIGIN=http://localhost:5174
CORS_CREDENTIALS=true

# Rate limiting (15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============ LOGGING ============
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_FORMAT=json

# ============ MONITORING (Optional) ============
SENTRY_DSN=
MONITORING_ENABLED=false

# ============ EMAIL (Future) ============
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
